<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="#FFFFFFFF"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="visible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/memo_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="TextView"
                android:textColor="#FF00FFFF" />

            <TextView
                android:id="@+id/memo_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="TextView"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/memo_palette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/memo_favorite"
                app:srcCompat="@drawable/baseline_palette_black_18dp" />

            <ImageView
                android:id="@+id/memo_favorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_toLeftOf="@id/memo_delete"

                app:srcCompat="@drawable/baseline_star_border_black_18dp" />

            <ImageView
                android:id="@+id/memo_delete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"

                app:srcCompat="@android:drawable/ic_menu_delete" />
        </RelativeLayout>

        <TextView
            android:id="@+id/memo_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textSize="20dp" />


    </LinearLayout>


</androidx.cardview.widget.CardView>